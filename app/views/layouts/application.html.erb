<!DOCTYPE html>
<html id="<%= controller.controller_name %>">
<head>
  <title><%= @title ? "Zoomix / #{@title}" : 'Zoomix' %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <%= yield %>
  </div>
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
</body>
</html>
