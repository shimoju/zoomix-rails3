<p><%= link_to 'Play!', play_path, class: 'play' %></p>

<h2>最近の動画</h2>
<table>
  <tr>
    <th>投稿者</th>
    <th>ツイート内容</th>
    <th>URL</th>
  </tr>
<% @user_posts.each do |post| %>
  <tr>
    <td>@<%= post.username %></td>
    <td><%= post.text %></td>
    <td>
    <% post.contents.each do |content| %>
      <%= link_to content.url, content.url %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>